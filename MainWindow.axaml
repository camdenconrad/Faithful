<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="NNImage.MainWindow"
        Title="Color Adjacency Neural Generator"
        MinWidth="1000" MinHeight="600">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style Selector="Border.panel">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Styles>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Classes="panel">
            <StackPanel>
                <TextBlock Classes="header" Text="Controls"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Training Section -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Training" FontWeight="SemiBold" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Image Folder:" VerticalAlignment="Center" Width="120"/>
                            <TextBox Name="FolderPathTextBox" Width="250" IsReadOnly="True" Margin="5,0"/>
                            <Button Name="SelectFolderButton" Content="Browse..." Click="SelectFolderButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Color Quantization:" VerticalAlignment="Center" Width="120"/>
                            <NumericUpDown Name="QuantizationLevel" 
                                         Value="128" 
                                         Minimum="16" 
                                         Maximum="256" 
                                         Increment="16"
                                         Width="100"
                                         Margin="5,0"/>
                            <TextBlock Text="colors" VerticalAlignment="Center" Margin="5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Name="TrainButton" Content="ðŸŽ“ Train Model" Click="TrainButton_Click"/>
                            <TextBlock Name="TrainingStatusText" 
                                     Text="Ready to train" 
                                     VerticalAlignment="Center" 
                                     Margin="10,0"
                                     Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Generation Section -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Generation" FontWeight="SemiBold" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Output Width:" VerticalAlignment="Center" Width="100"/>
                            <NumericUpDown Name="OutputWidth" 
                                         Value="256" 
                                         Minimum="64" 
                                         Maximum="1024" 
                                         Increment="32"
                                         Width="100"
                                         Margin="5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Output Height:" VerticalAlignment="Center" Width="100"/>
                            <NumericUpDown Name="OutputHeight" 
                                         Value="256" 
                                         Minimum="64" 
                                         Maximum="1024" 
                                         Increment="32"
                                         Width="100"
                                         Margin="5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Name="GenerateButton" 
                                  Content="ðŸŽ¨ Generate Image" 
                                  Click="GenerateButton_Click"
                                  IsEnabled="False"/>
                            <Button Name="SaveButton" 
                                  Content="ðŸ’¾ Save Image" 
                                  Click="SaveButton_Click"
                                  IsEnabled="False"
                                  Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Image Display Area -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sample Images -->
            <Border Grid.Column="0" Classes="panel">
                <DockPanel>
                    <TextBlock Classes="header" 
                             Text="Training Samples" 
                             DockPanel.Dock="Top"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                VerticalScrollBarVisibility="Auto">
                        <WrapPanel Name="SampleImagesPanel" 
                                 Orientation="Horizontal"/>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Generated Image -->
            <Border Grid.Column="1" Classes="panel">
                <DockPanel>
                    <TextBlock Classes="header" 
                             Text="Generated Image" 
                             DockPanel.Dock="Top"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                VerticalScrollBarVisibility="Auto">
                        <Viewbox Stretch="Uniform" 
                               StretchDirection="DownOnly"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                            <Image Name="GeneratedImage" 
                                 Width="256" 
                                 Height="256"/>
                        </Viewbox>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
